<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="700" HorizontalContentAlignment="Center" 
        ResizeMode="NoResize" Icon="icon.ico"
        BorderBrush="#333"
        Background="#333" WindowStartupLocation="CenterScreen" >

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition  Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Выберите метод" FontSize="20" Foreground="{StaticResource ControlBackgroundOver}" Grid.Column="2" Grid.ColumnSpan="5" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Button Content="Метод Джилбы" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Click="Button_Click_1" Margin="30,20"/>
        <Button Content="Метод Холстеда" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="2"  Click="Button_Click" Margin="30,20"/>
    </Grid>
</Window>
